@model IEnumerable<PrestamoLibros.Models.RankingSancionesViewModel>

<div class="page-header">
    <h1>Ranking Alumnos Sancionados</h1>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombres</th>
            <th>Cantidad de Sanciones</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombres</td>
                <td>@item.CantidadSanciones</td>
                <td>
                    <a href="@Url.RouteUrl("ver_alumno", new { id = item.Id })">Ver</a>
                    <a href="@Url.RouteUrl("editar_alumno", new { id = item.Id })">Editar</a>
                    <a href="@Url.RouteUrl("libros_posesion_alumno", new { id = item.Id })">Libros</a>
                    <a href="@Url.RouteUrl("sanciones_alumno", new { id = item.Id })">Sanciones</a>
                </td>
            </tr>   
        } 
    </tbody>
</table>