@model IEnumerable<PrestamoLibros.Models.Sancion>

<div class="page-header">
    <h1>Listar Sanciones</h1>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Alumno</th>
            <th>Descripcion</th>
            <th>Fecha</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><a href="@Url.RouteUrl("ver_alumno", new { id = item.Id })">@item.Alumno.Nombres</a></td>
                <td>@item.Descripcion</td>     
                <td>@item.Fecha.ToShortDateString()</td>
                <td>
                    <a href="@Url.RouteUrl("ver_sancion", new { id = item.Id })">Ver</a>
                    <a href="@Url.RouteUrl("editar_sancion", new { id = item.Id })">Editar</a>
                </td>
            </tr>        
        }
    </tbody>
</table>