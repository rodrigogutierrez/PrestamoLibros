@model PrestamoLibros.Models.Alumno

<div class="page-header">
    <h1>Libros en Posesion de Alumno</h1>
</div>

<div class="control-group">
    <label class="control-label">Nombres:</label>
    <div class="controls">
        <input class="input-xlarge" type="text" value="@Model.Nombres" name="Nombres" disabled="disabled">
    </div>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Autor</th>
            <th>Año</th>
            <th>ISBN</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in ViewBag.libros)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Autor</td>
                <td>@item.Anio</td>
                <td>@item.ISBN</td>
                <td>
                    <a href="@Url.RouteUrl("ver_libro", new { id = item.Id})">Ver</a>
                    <a href="@Url.RouteUrl("editar_libro", new { id = item.Id})">Editar</a>
                    <a href="@Url.RouteUrl("prestar_libro", new { id = item.Id})">Prestar</a>
                    <a href="@Url.RouteUrl("historial_libro", new { id = item.Id})">Historial</a>
                </td>
            </tr>           
        }            
    </tbody>
</table>