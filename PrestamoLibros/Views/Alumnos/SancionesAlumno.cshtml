@model PrestamoLibros.Models.Alumno

<div class="page-header">
    <h1>Sanciones Alumno</h1>
</div>

<div class="control-group">
    <label class="control-label">Nombres:</label>
    <div class="controls">
        <input class="input-xlarge" type="text" value="@Model.Nombres" name="Nombres" disabled="disabled">
    </div>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Descripcion</th>
            <th>Fecha</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.sanciones)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descripcion</td>            
                <td>@item.Fecha</td>
                <td>
                    <a href="@Url.RouteUrl("ver_sancion", new { id = item.Id })">Ver</a>
                    <a href="@Url.RouteUrl("editar_sancion", new { id = item.Id })">Editar</a>
                </td>
            </tr>           
        }    
    </tbody>
</table>
</table>