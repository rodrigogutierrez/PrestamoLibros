@using MvcFlash.Core.Extensions

<div class="page-header">
    <h1>Registrar Libro</h1>
</div>
@Html.Flash()
<form class="producto form-horizontal" method="post" action="@Url.RouteUrl("crear_libro")">
    <fieldset>
        <div class="control-group">
            <label class="control-label">Nombre:</label>
            <div class="controls">
                <input class="input-xlarge" type="text" value="" name="Nombre">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Autor:</label>
            <div class="controls">
                <input class="input-xlarge" type="text" value="" name="Autor">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Año:</label>
            <div class="controls">
                <input class="input-xlarge" type="number" value="" name="Anio">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">ISBN:</label>
            <div class="controls">
                <input class="input-xlarge" type="text" value="" name="ISBN">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <button type="reset" class="btn">Limpiar</button>
        </div>
    </fieldset>
</form>