@using MvcFlash.Core.Extensions

@model IEnumerable<PrestamoLibros.Models.Libro>

<div class="page-header">
    <h1>Listar Libros</h1>
</div>
@Html.Flash()
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Autor</th>
            <th>Año</th>
            <th>ISBN</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Autor</td>
                <td>@item.Anio</td>
                <td>@item.ISBN</td>
                <td>
                    <a href="@Url.RouteUrl("ver_libro", new { id = item.Id})">Ver</a>
                    <a href="@Url.RouteUrl("editar_libro", new { id = item.Id})">Editar</a>
                    <a href="@Url.RouteUrl("prestar_libro", new { id = item.Id})">Prestar</a>
                    <a href="@Url.RouteUrl("historial_libro", new { id = 1})">Historial</a>
                </td>
            </tr>           
        }
    </tbody>
</table>