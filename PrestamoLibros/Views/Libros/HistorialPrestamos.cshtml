@using MvcFlash.Core.Extensions
@model PrestamoLibros.Models.Libro

<div class="page-header">
    <h1>Historial Prestamos Libro</h1>
</div>
@Html.Flash()
<div class="control-group">
    <label class="control-label">Nombre:</label>
    <div class="controls">
        <input class="input-xlarge" type="text" value="@Model.Nombre" name="Nombre" disabled="disabled">
    </div>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombres</th>
            <th>Rut</th>
            <th>Número Matrícula</th>
            <th>Carrera</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.alumnos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombres</td>
                <td>@item.Rut</td>
                <td>@item.NumeroMatricula</td>
                <td>@item.Carrera.Nombre</td>
                <td>
                    <a href="@Url.RouteUrl("ver_alumno", new { id = item.Id })">Ver</a>
                    <a href="@Url.RouteUrl("editar_alumno", new { id = item.Id })">Editar</a>
                    <a href="@Url.RouteUrl("libros_posesion_alumno", new { id = item.Id })">Libros</a>
                    <a href="@Url.RouteUrl("sanciones_alumno", new { id = item.Id })">Sanciones</a>
                </td>
            </tr>    
        }
    </tbody>
</table>